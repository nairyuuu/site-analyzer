{
    "manifest_version": 3,
    "name": "Site Analyzer",
    "version": "1.0",
    "description": "Scans a website to detect technologies used.",
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["http://*/*", "https://*/*"],
    "background": {
      "service_worker": "src/background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["src/content.js"]
      }
    ]
  }
   